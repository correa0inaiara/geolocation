{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "types": ["reflect-metadata", "mocha"],
  "exclude": ["node_modules"]
}
